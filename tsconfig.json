{
    "compilerOptions": {
        "outDir": "build",
        "module": "ESNext",
        "alwaysStrict": true,
        "allowSyntheticDefaultImports": true,
        "downlevelIteration": true,
        "target": "ES5",
        "sourceMap": true,
        "declaration": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "incremental": true,
        "strictFunctionTypes": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "lib": [
            "dom",
            "esnext"
        ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "build",
        "dist",
        "example",
        "rollup.config.js"
    ]
}
