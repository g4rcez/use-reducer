{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "ESNext",
        "alwaysStrict": true,
        "declarationDir": "./dist",
        "declarationMap": true,
        "emitDeclarationOnly": true,
        "allowSyntheticDefaultImports": true,
        "downlevelIteration": true,
        "target": "ES5",
        "sourceMap": true,
        "declaration": true,
        "moduleResolution": "node",
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "preserve",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "incremental": true,
        "strictFunctionTypes": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "lib": [
            "dom",
            "esnext"
        ]
    },
    "include": ["src"]
}
